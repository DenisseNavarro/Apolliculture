generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model categories {
  id                  String                @id @default(dbgenerated("(uuid())")) @db.VarChar(100)
  name                String                @db.VarChar(50)
  description         String                @db.VarChar(500)
  products_categories products_categories[]
}

model order_details {
  id          String   @id @default(dbgenerated("(uuid())")) @db.VarChar(100)
  order_id    String   @db.VarChar(100)
  products_id String   @db.VarChar(100)
  price       Float
  quantity    Int
  orders      orders   @relation(fields: [order_id], references: [id], onDelete: Cascade, map: "order_details_ibfk_1")
  products    products @relation(fields: [products_id], references: [id], onDelete: Cascade, map: "order_details_ibfk_2")

  @@index([order_id], map: "order_id")
  @@index([products_id], map: "products_id")
}

model orders {
  id            String          @id @default(dbgenerated("(uuid())")) @db.VarChar(100)
  user_id       String          @db.VarChar(100)
  order_date    DateTime        @db.Date
  ammount       Float
  order_details order_details[]
  users         users           @relation(fields: [user_id], references: [id], onDelete: Cascade, map: "orders_ibfk_1")

  @@index([user_id], map: "user_id")
}

model products {
  id                  String                @id @default(dbgenerated("(uuid())")) @db.VarChar(100)
  name                String                @db.VarChar(30)
  price               Float
  description         String                @db.VarChar(500)
  image               String                @db.VarChar(500)
  create_date         DateTime              @db.Date
  units_stock         Int
  user_id             String                @db.VarChar(100)
  order_details       order_details[]
  users               users                 @relation(fields: [user_id], references: [id], onDelete: Cascade, map: "products_ibfk_1")
  products_categories products_categories[]

  @@index([user_id], map: "user_id")
}

model products_categories {
  id            String     @id @default(dbgenerated("(uuid())")) @db.VarChar(100)
  products_id   String     @db.VarChar(100)
  categories_id String     @db.VarChar(100)
  products      products   @relation(fields: [products_id], references: [id], onDelete: Cascade, map: "products_categories_ibfk_1")
  categories    categories @relation(fields: [categories_id], references: [id], onDelete: Cascade, map: "products_categories_ibfk_2")

  @@index([categories_id], map: "categories_id")
  @@index([products_id], map: "products_id")
}

model users {
  id         String     @id @default(dbgenerated("(uuid())")) @db.VarChar(100)
  username   String     @db.VarChar(30)
  password   String     @db.VarChar(500)
  first_name String     @db.VarChar(30)
  last_name  String     @db.VarChar(30)
  email      String     @db.VarChar(30)
  admin      Boolean
  orders     orders[]
  products   products[]
}
